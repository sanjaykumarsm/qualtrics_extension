{
	"compilerOptions": {
		"noImplicitAny": true,
		"sourceMap": true,
		"module": "ES2015",
		"moduleResolution": "node",
		"target": "es5",
		"jsx": "react",
		"skipLibCheck": true,
		"allowJs": true,
		"skipDefaultLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"types": [
			"node",
			"jest"
		],
		"lib": [
			"DOM"
		]
	},
	"include": [
		"src/**/*",
	],
	"exclude": [
		"./dist/",
		"./node_modules",
		"__mocks__"
	]
}
